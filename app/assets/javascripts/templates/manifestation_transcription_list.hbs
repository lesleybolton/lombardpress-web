{{!-- this is handlebars template for text info --}}
<h1>
	{{#if is_structure_block}}
		{{#if previous}}
			<small><a href="#" id="lbp-previous-paragraph" class="js-show-paragraph-info" data-pid="{{previous}}" data-itemid="{{itemid}}" data-view="compare">Previous</a></small>
		{{/if}}

		<a href="#" class="js-show-paragraph-info" data-pid="{{itemid}}" data-itemid="{{itemid}}" data-view="compare">Paragraph {{number}}</a>

		{{#if next}}
			<small><a href="#" id="lbp-next-paragraph" class="js-show-paragraph-info" data-pid="{{next}}" data-itemid="{{itemid}}" data-view="compare">Next</a></small>
		{{/if}}
	{{/if}}
</h1>
</div>
<div class="row" style="height: 400px">
	<div class='col-sm-6 lbp-text-col' id="lbp-text-col-left" style="height: 100%; overflow: auto">

	</div>
	<div class='col-sm-6 lbp-text-col' id="lbp-text-col-right" style="height: 100%; overflow: auto">


	</div>
</div>
