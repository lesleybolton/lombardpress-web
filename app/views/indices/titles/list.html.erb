<div class="container lbp-index-container">
		<h1>Titles mentioned in this commentary</h1>
		<h2>Category: <%= params[:category] %></h2>
		<div class="lbp-index-breadcrumbs">
			<%= link_to "Back", :back %>
			<%= link_to "Return to Index", "/index" %>
		</div>
	<table class="table table-striped table-hover">
		<% @results.each do |result| %>
			<% titleid = result[:resource].to_s.split("/").last %>
			<tr>
				<td><%= link_to result[:resourceTitle], "/index/titles/show/#{titleid}" %></td>
				<td><%= link_to "SCTA Entry",  result[:resource].to_s %></td>
			</tr>
		<% end %>	
	</table>
</div>