<div class="container center">
	<div>
		<h1><%= @user.email %></h1>
		<p><%= @user.role %></p>
		<p><%= @user.created_at %></p>
		<p><%= link_to "Edit Profile", '/users/edit' %></p>
	</div>

	<% if current_user.admin? %>
		<div style="border-top: 1px solid black">
			<h3>Admin Options</h3>
			<div>
				<% if @user.texts.count > 0  %>
					<p>Has individual access to</p>
					<table class="table table-striped table-hover">
						<% @user.texts.each do |text| %>
							<tr>
								<td><%= text.itemid %></td>
								<td><%= text.commentaryid %></td>
								<td>Remove</td>
							</tr>
						<% end %>
					</table>
				<% end %>
			</div>
			<div style="margin: 10px; border-top: 1px dotted gray;">
				<form>
					<p>Add text permission</p>
					<input type="input" placeholder="itemid"></input>
					<input type="input" placeholder="commentaryid"></input>
					<input type="submit"/>
				</form>
			</div>
			<div style="margin: 10px; border-top: 1px dotted gray;">
				<%= form_for(:profile, url: :update_users_profile, method: :put) do |f| %>
				<p>Change User Role</p>
				  <%= f.text_field :role, autocomplete: "off" %>
				  <%= f.submit "Update User" %>
				<% end %>
				<br /><br />
				  <%= link_to "Back to Profiles List", users_profiles_path %>
			</div>
		</div>
	<% end %>
</div>
		