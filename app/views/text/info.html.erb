<div id="lbp-info-container" class="container">
	<h1>Text Info/Stats for <%= @title %></h1>
	<div class="row">
		<div class="col-md-3">
			<div class="panel panel-default">
			  <div class="panel-heading">
			  	<h3 class="panel-title">Mentions</h3>
			  </div>
			  <div class="panel-body">
			    <table class="table table-striped table-hover">
			    	<% @name_results.each do |result| %>
			    	<tr>
			    		<td><%= link_to result[:nameTitle].to_s, result[:name].to_s, target: "_blank" %></td>
			    		
			    	</tr>
			    	<% end %>
			    </table>
			  </div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="panel panel-default">
				<div class="panel-heading">
				  	<h3 class="panel-title">Quotations Used</h3>
				  </div>
				  <div class="panel-body">
				    <table class="table table-striped table-hover">
				    	<% @quote_results.each do |result| %>
				    	<tr>
				    		<td><%= result[:quoteText].to_s %></td>
				    		<td><%= link_to result[:quoteCitation].to_s, result[:quote].to_s, target: "_blank" %></td>

				    	</tr>
				    	<% end %>
				    </table>
				  </div>
				</div>
			</div>
		</div>
	</div>
</div>

	

		