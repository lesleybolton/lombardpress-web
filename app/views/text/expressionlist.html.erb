<style type="text/css">
  .status{display: none;}
  .itemLink:hover .status{display: inline;}
</style>
<!-- TODO: need a global style for top of page headers -->
<div style="padding: 20px">
  <h1><%= @results[0][:workgrouptitle] %></h1>
</div>
<div id="lbp-question-container" class="container">
  <table class="table table-striped table-hover">
    <% @results.each do |result| %>

    <% link = "/text/questions/" + result[:expression].to_s.split('/').last %>
    <tr>
      <td><%= link_to result[:expressiontitle], link %></td>
    </tr>

        
    <% end %>
  </table>
</div>